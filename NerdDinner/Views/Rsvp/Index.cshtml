@model IEnumerable<NerdDinner.Models.Rsvp>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dinner)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dinner.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RsvpId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RsvpId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RsvpId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
